<h2 class="header h--large h--bold">Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), 
              html: { method: :put, class: "form" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__field" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>
    
  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form__field" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form__field" %>
  </div>
  
   <div class="field">
    <br>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
    <br><br>
  </div>

  <div class="field">
    <%= f.label :password, "New Password" %><br/>
    <%= f.password_field :password, autocomplete: "new-password", class: "form__field" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form__field" %>
  </div>

  <div class="field">
    <%= f.label :current_password %><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form__field" %>
  </div>

  <div class="actions">
    <%= f.submit "Update", class: "button" %>
  </div>

  <div class="actions">
    <%= link_to "Cancel my account", registration_path(resource_name), 
        data: { confirm: "Are you sure?" }, method: :delete, class: "button button--ghost button--no-border" %>
  </div>

  <p style="text-align: center;">If google/github user, your initial password is your username, we recommend you change it</p>
<% end %>

