<h2 class="header h--large h--bold">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name),
              html: { class: "form" } ) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__field" %>
  </div>


  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form__field" %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form__field" %>
  </div>
  
   <div class="field">
    <br>
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
    <br/>
    <br/>
  </div>
     
  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form__field" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form__field" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "button" %>
  </div>

  <div class="actions">
    <%= link_to  "Login", new_user_session_path, class: "button button--ghost button--no-border" %>
  </div>
<% end %>
